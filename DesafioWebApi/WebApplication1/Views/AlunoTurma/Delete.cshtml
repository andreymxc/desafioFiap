@model DWFIAP.WebApp.Models.AlunoTurmaViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

@using (Html.BeginForm())
{
    <h3>Tem certeza que deseja remover essa relação de Aluno e Turma?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Aluno_Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Aluno_Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Turma_Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Turma_Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Remover" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
}
